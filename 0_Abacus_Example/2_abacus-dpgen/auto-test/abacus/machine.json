{
  "api_version": "1.0",
  "deepmd_version": "2.1.0",
  "train" :[
    {
      "command": "dp",
      "machine": {
        "batch_type": "Lebesgue",
        "context_type": "LebesgueContext",
        "local_root" : "./",
        "remote_profile":{
          "email": "",
          "password": "",
          "program_id": ,
            "keep_backup":true,
            "input_data":{
                "job_type": "indicate",
                "log_file": "00*/train.log",
                "grouped":true,
                "job_name": "dpgen_train_SiC",
                "disk_size": 100,
                "scass_type":"c4_m15_1 * NVIDIA T4",
                "checkpoint_files":["00*/checkpoint","00*/model.ckpt*"],
                "checkpoint_time":30,
                "platform": "ali",
                "job_type": "container",
                "image_name": "registry.dp.tech/dptech/deepmd-kit:2.1.5-cuda11.6" ,
                "on_demand":0
            }
        }
      },
      "resources": {
        "number_node": 1,
        "cpu_per_node": 4,
        "gpu_per_node": 1,
        "queue_name": "T4_4_15",
        "group_size": 1
      }
    }
  ],
  "model_devi":
    [{
      "command": "lmp -i input.lammps -v restart 0",
      "machine": {
        "batch_type": "Lebesgue",
        "context_type": "LebesgueContext",
        "local_root" : "./",
        "remote_profile":{
          "email": "",
          "password": "",
          "program_id": ,
            "keep_backup":true,
            "input_data":{
              "job_type": "indicate",
              "log_file": "*/model_devi.log",
              "grouped":true,
              "job_name": "dpgen_model_devi_SiC",
              "disk_size": 200,
              "scass_type":"c4_m15_1 * NVIDIA T4",
              "platform": "ali",
              "job_type": "container",
              "image_name": "registry.dp.tech/dptech/deepmd-kit:2.1.5-cuda11.6",
              "on_demand":0
            }
        }
      },
      "resources": {
        "number_node": 1,
        "cpu_per_node": 4,
        "gpu_per_node": 1,
        "queue_name": "T4_4_15",
        "group_size": 50
      }
    }
  ],
  "fp":
    [{
      "command": "OMP_NUM_THREADS=1 mpirun -n 16 abacus",
      "machine": {
        "batch_type": "Lebesgue",
        "context_type": "LebesgueContext",
        "local_root" : "./",
        "remote_profile":{
          "email": "",
          "password": "",
          "program_id": ,
            "input_data":{
              "api_version":2,
              "job_type": "indicate",
              "log_file": "task*/fp.log",
              "grouped":true,
              "job_name": "dpgen_fp_SiC",
              "disk_size": 100,
              "scass_type":"c32_m64_cpu",
              "platform": "ali",
              "job_type": "container",
              "image_name":"registry.dp.tech/dptech/abacus:3.2.0",   
              "on_demand":0
            }
        }
      },
      "resources": {
        "number_node": 1,
        "cpu_per_node": 16,
        "gpu_per_node": 0,
        "queue_name": "CPU",
        "group_size": 1, 
        "source_list": ["/opt/intel/oneapi/setvars.sh"]
      }
    }
  ]
}
